{
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "exclude": [ 
    "tests",
    "lib",
    "dist"
  ]
}
